.toolbar {
  padding-left: 24rpx;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  border: 1rpx solid gray;

}

.search {

  margin-left: 24rpx;
  height: 60rpx;
  width: 360rpx;
  background-color: #f3f3f3;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;

}

.search-icon {
  margin-left: 12rpx;
  width: 40rpx;
  height: 40rpx;

}

.search-swiper {
  margin-left: 12rpx;
  flex-grow: 1;
  height: 60rpx;
}

.search-swiper-item {
  color: #bbb;
  font-size: 28rpx;
  height: 100%;
  line-height: 60rpx;
  vertical-align: middle;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;

}

.banners {
  width: 702rpx;
  height: 300rpx;
  margin: 24rpx;

}

swiper .wx-swiper-dot {
  height: 16rpx;
  width: 16rpx;
  border-radius: 50%;
}

.banner-image {
  border-radius: 24rpx;
  width: 100%;
  height: 100%;
}