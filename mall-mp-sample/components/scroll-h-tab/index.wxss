/* components/scroll-tab/index.wxss */

.scroll-h {
  width: 100%;
  height: 90rpx;
  white-space: nowrap;
  overflow-x: scroll;
}

.scroll-h-item {
  padding-top: 4rpx;
  display: inline-flex;
  height: 100%;
  align-items: center;
  flex-direction: column;

}

.scroll-h-item-text {
  padding-left: 24rpx;
  padding-right: 24rpx;
  background-color: white;
  vertical-align: middle;
  line-height: 82rpx;
  color: #999;
  font-weight: 400;
  font-size: 30rpx;
}

.text-active {
  color: black;
  font-size: 32rpx;
  font-weight: 600;
}


.scroll-h-item-underline {
  height: 4rpx;
  width: 60rpx;
  background-color: transparent;
}

.underline-active {
  background-color: red;
}